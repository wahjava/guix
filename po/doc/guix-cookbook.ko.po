#: guix-git/doc/guix-cookbook.texi:3954
#, no-wrap
msgid "IPv4-Netmask"
msgstr ""

#. type: table
#: guix-git/doc/guix-cookbook.texi:3956
msgid "255.255.255.0"
msgstr ""

